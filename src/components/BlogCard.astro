---
interface Props {
  title: string;
  description: string;
  date: string;
  imageUrl: string;
  category: string;
  slug: string;
}

const { title, description, date, imageUrl, category, slug } = Astro.props;
---

<article class="bg-white rounded-lg overflow-hidden shadow-md hover:-translate-y-1 transition-transform duration-300">
  <a href={`/blog/${slug}`} class="block">
    <div class="aspect-video overflow-hidden">
      <img 
        src={imageUrl} 
        alt={title} 
        class="w-full h-full object-cover"
        transition:name={`image-${slug}`}
      />
    </div>
    <div class="p-6">
      <span class="inline-block px-3 py-1 bg-gray-100 rounded-full text-sm text-gray-600 mb-4">
        {category}
      </span>
      <h2 class="text-xl font-semibold text-gray-900 mb-2 line-clamp-2">
        {title}
      </h2>
      <p class="text-gray-600 text-sm mb-4 line-clamp-3">
        {description}
      </p>
      <div class="flex items-center justify-between">
        <time 
          datetime={date} 
          class="text-sm text-gray-500"
        >
          {new Date(date).toLocaleDateString('es-ES', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
        <span class="text-primary text-sm font-medium hover:text-primary/80 transition-colors">
          Leer más →
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  .blog-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-5px);
  }

  .image-container {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content {
    padding: 1.5rem;
  }

  .category {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: #f0f0f0;
    border-radius: 20px;
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: #333;
  }

  p {
    color: #666;
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  time {
    color: #999;
    font-size: 0.875rem;
  }
</style> 